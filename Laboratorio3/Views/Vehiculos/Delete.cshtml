@model Laboratorio3.Models.Vehiculo

@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<div class="container mt-4">
    <h1>Eliminar Vehículo</h1>
    <h3>¿Estás seguro de que deseas eliminar este vehículo?</h3>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Anio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Anio)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Marca)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Marca)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Modelo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Modelo)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.VIN)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VIN)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="VehiculoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
